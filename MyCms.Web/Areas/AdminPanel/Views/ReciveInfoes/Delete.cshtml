
@model MyCms.DomainClasses.ReciveInfo.ReciveInfo

@{
    ViewData["Title"] = "Delete";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Are you sure you want to delete this?</h3>
    </div>
    <div class="panel-body" style=" overflow-y: scroll; height: 650px;">
        <div class="row">
            <div class="col-md-11">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SenderName)
                    </dt>
                    <dd>
                        <div class="well well-sm">@Html.DisplayFor(model => model.SenderName)</div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.SenderEmail)
                    </dt>
                    <dd>
                        <div class="well well-sm">@Html.DisplayFor(model => model.SenderEmail)</div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ReciveMessage)
                    </dt>
                    <dd>
                        <div class="well well-sm">@Html.DisplayFor(model => model.ReciveMessage)</div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd>
                        <div class="well well-sm">
                            @if (Model.Status == true)
                            {<p>Enable</p>}
                            @if (Model.Status == false)
                            {<p>Disable</p>}
                        </div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </dt>
                    <dd>
                        <div class="well well-sm">@DateConvertor.ToShamsi(Model.CreatedDate)</div>
                    </dd>
                </dl>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ReciveInfoID" />
                        <input type="submit" value="Delete" class="btn btn-success" /> |
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
