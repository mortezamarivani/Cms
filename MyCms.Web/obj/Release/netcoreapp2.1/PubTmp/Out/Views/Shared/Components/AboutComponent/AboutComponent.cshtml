@model IEnumerable<MyCms.DomainClasses.About.About>

<div class="col-lg-5 col-lg-offset-1 col-md-6 wow fadeInUp" data-wow-delay="0.6s">
    <address>

        @foreach (var item in Model)
        {
            @if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.En)
            {
                <p class="contact-title">CONTACT ME</p>
            }
            else if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.De)
            {
                <p class="contact-title">Über Ich</p>
            }
            else if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.Per)
            {
                <p class="contact-title Persianfont PersianTextAlignR"> : ارتباط با ما</p>

            }

            if (@item.TelPhon != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-phone"></i> @item.TelPhon </p>
                </div>
            }
            if (@item.Mobile != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-mobile"></i> @item.Mobile </p>
                </div>
            }
            if (@item.LinkdinAddress != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-linkedin"></i> @item.LinkdinAddress </p>
                </div>
            }
            if (@item.InstagramID != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-instagram"></i> @item.InstagramID </p>
                </div>
            }
            if (@item.TwitterAddress != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-twitter"></i> @item.TwitterAddress </p>
                </div>
            }
            if (@item.FacebookAddress != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-facebook"></i> @item.FacebookAddress </p>
                </div>
            }
            if (@item.Email != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-envelope-o"></i> @item.Email</p>
                </div>
            }
            if (@item.Address != null)
            {
                <div class="col-md-12">
                    <p><i class="fa fa-map-marker"></i> @item.Address</p>
                </div>
            }


        }

    </address>
</div>