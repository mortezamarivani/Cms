@model IEnumerable<MyCms.DomainClasses.ReciveInfo.ReciveInfo>


    <div class="col-lg-6 col-md-6 col-xs-10 wow fadeInUp" data-wow-delay="0.6s">
        @if (@ViewBag.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.En)
        {
            <form role="form" method="post" asp-action="CreateReciveInfo">
                <input name="SenderName" type="text" class="form-control" id="SenderName" placeholder="Your Name">
                <input name="SenderEmail" type="email" class="form-control" id="SenderEmail" placeholder="Your Email">
                <textarea name="ReciveMessage" rows="13" class="form-control" id="ReciveMessage" placeholder="Your Message"></textarea>
                <input name="send" type="submit" class="form-control" id="send" value="SEND ME">
            </form>
        }
        else if (@ViewBag.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.De)
        {
            <form role="form" method="post" asp-action="CreateReciveInfo">
                <input name="SenderName" type="text" class="form-control" id="SenderName" placeholder="Ihre Name">
                <input name="SenderEmail" type="email" class="form-control" id="SenderEmail" placeholder="Ihre Email">
                <textarea name="ReciveMessage" rows="13" class="form-control" id="ReciveMessage" placeholder="Ihre Nachricht"></textarea>
                <input name="send" type="submit" class="form-control" id="send" value="SEND MIR">
            </form>
        }
        else if (@ViewBag.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.Per)
        {
            <form role="form" method="post" asp-action="CreateReciveInfo">
                <input name="SenderName" type="text" class="form-control Persianfont PersianTextAlignR" id="SenderName" placeholder="نام و نام خانوادگي">
                <input name="SenderEmail" type="email" class="form-control Persianfont PersianTextAlignR" id="SenderEmail" placeholder="آدرس آيميل">
                <textarea name="ReciveMessage" rows="13" class="form-control Persianfont PersianTextAlignR" id="ReciveMessage" placeholder="توضيحات ارسالي"></textarea>
                <input name="send" type="submit" class="form-control Persianfont PersianTextAlignC" id="send" value="ارسال ">
            </form>
        }
    </div>
