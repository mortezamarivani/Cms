@model MyCms.DomainClasses.Skills.Skills

@{
    ViewData["Title"] = "Delete";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Are you sure you want to delete this?</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-11">
                <br />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SkillsTitle)
                    </dt>
                    <dd>
                        <div class="well well-sm">@Html.DisplayFor(model => model.SkillsTitle)</div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.SkillsDescription)
                    </dt>
                    <dd>
                        <div class="well well-sm">@Html.DisplayFor(model => model.SkillsDescription)</div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.BootstarpClassName)
                    </dt>
                    <dd>
                        <div class="well well-sm">@Html.DisplayFor(model => model.BootstarpClassName)</div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Progress)
                    </dt>
                    <dd>
                        <div class="well well-sm">@Html.DisplayFor(model => model.Progress)</div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd>
                        <div class="well well-sm">
                            @if (Model.Status == true)
                            {<p>Enable</p>}
                            @if (Model.Status == false)
                            {<p>Disable</p>}
                        </div>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Languge)
                    </dt>
                    <dd>
                        <div class="well well-sm">
                            @if (Model.Languge == 0)
                            {<p>Persian</p>}
                            @if (Model.Languge == 1)
                            {<p>English</p>}
                            @if (Model.Languge == 2)
                            {<p>German</p>}
                        </div>
                    </dd>
                </dl>
                @*<div class="form-group">
                        <a asp-action="Edite" class="btn btn-success" asp-route-id="@Model.SkillsID">Edite</a> |
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>*@

                <form asp-action="Delete">
                    <input type="hidden" asp-for="SkillsID" />
                    <input type="submit" value="Delete" class="btn btn-success" /> |
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </form>

            </div>

        </div>
    </div>
</div>
