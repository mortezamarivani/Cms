@model IEnumerable<MyCms.DomainClasses.Gallery.Gallery>

<div id="portfolio" class="section">
    <div class="container">
        <div class="row">
            @{bool HeaderWrite = true;}

            @foreach (var item in Model)
            {
                @if (@ViewBag.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.En && HeaderWrite)
                {
                    <div class="col-md-12">
                        <h2 class="wow bounce">Gallery</h2>
                    </div>
                }
                else if (@ViewBag.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.De && HeaderWrite)
                {
                    <div class="col-md-12">
                        <h2 class="wow bounce">Galerie</h2>
                    </div>
                }
                else if (@ViewBag.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.Per && HeaderWrite)
                {
                    <div class="col-md-12">
                        <h2 class="wow bounce Persianfont PersianTextAlignC">گالري</h2>
                    </div>
                }
                //if (item.PicRow <= 6)
                //{
                <div class="col-md-4 col-xs-6 wow fadeIn" data-wow-delay="0.6s">
                    <div class="portfolio-thumb">
                        <img src="~/Gallery/@item.GalleryName" class="img-responsive" alt="portfolio img">
                        <div class="portfolio-overlay">
                            <h4>@item.GalleryDesc</h4>
                            <h5>@item.GalleryDesc</h5>
                        </div>
                    </div>
                </div>
                //}
                HeaderWrite = false;
            }

        </div>
    </div>
</div>