@model IEnumerable<MyCms.DomainClasses.About.About>

    <div class="col-md-6 col-xs-11 wow fadeInLeft" data-wow-delay="0.9s">

        @foreach (var item in Model)
        {
            @if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.En)
            {
                <h2>ABOUT ME</h2>
                <h4>@item.AboutTitle</h4>
                <p>@item.AboutDescription</p>
            }
            else if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.De)
            {
                <h2>Über Ich</h2>
                <h4>@item.AboutTitle</h4>
                <p>@item.AboutDescription</p>
            }
            else if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.Per)
            {
                <h2 class=" Persianfont PersianTextAlignR">درباره ما</h2>
                <h4 class=" Persianfont PersianTextAlignR">@item.AboutTitle</h4>
                <p class=" Persianfont PersianTextAlignR">@item.AboutDescription</p>
            }
        }

    </div>