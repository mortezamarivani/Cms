@model IEnumerable<MyCms.DomainClasses.Skills.Skills>

@{
    ViewData["Title"] = "Show List Of Skills";
}


    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Show List Of Skills..</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="row-fluid">
                        <th class="span3">
                            @Html.DisplayNameFor(model => model.SkillsTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SkillsDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BootstarpClassName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Progress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SkillsTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SkillsDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BootstarpClassName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Progress)
                        </td>
                        <td>
                            @if (@item.Status == true)
                            {<p>Enable</p>}
                            @if (@item.Status == false)
                            {<p>Disable</p>}
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SkillsID" class="btn btn-sm  btn-primary">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.SkillsID" class="btn btn-sm btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.SkillsID" class="btn  btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="panel-footer">
                <a asp-action="Create" class="btn btn-success">Create New Skill </a>
            </div>
        </div>
    </div>



