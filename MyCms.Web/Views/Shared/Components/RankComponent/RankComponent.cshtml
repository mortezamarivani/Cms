@model IEnumerable<MyCms.DomainClasses.Rank.Rank>

    <div class="col-md-12 col-xs-11 wow fadeInLeft" data-wow-delay="0.9s">
        @{bool HeaderWrite = true;}


        <div class="row ">
            @foreach (var item in Model)
            {
                @if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.En)
                {
                    if (HeaderWrite)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <h2>My Rank</h2>
                            </div>
                        </div>
                    }
                    <div class="col-md-6 col-xs-11 wow fadeInUp " data-wow-delay="0.6s">
                        <div class="media">
                            <div class="media-object media-left ">
                                <i class="fa fa-gift"></i>
                            </div>
                            <div class="media-body">
                                <div class="col-md-12">
                                    <h3 class="media-heading" style="color:#D43F52">@item.RankName</h3>
                                    <p>
                                        @if (@item.Institute != null)
                                        {<h>Institute  :  </h>@item.Institute;
                                    }
                                    </p>
                                    <p> @item.RankDesc.Trim()<br /></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.De)
                {
                    if (HeaderWrite)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <h2>Mein Rang</h2>
                            </div>
                        </div>
                    }
                    <div class="col-md-6 col-xs-11 wow fadeInUp " data-wow-delay="0.6s">
                        <div class="media">
                            <div class="media-object media-left ">
                                <i class="fa fa-gift"></i>
                            </div>
                            <div class="media-body">
                                <div class="col-md-12">
                                    <h3 class="media-heading" style="color:#D43F52">@item.RankName</h3>
                                    <p>
                                        @if (@item.Institute != null)
                                        {<h>Institute  :  </h>@item.Institute;
                                    }
                                    </p>
                                    <p> @item.RankDesc.Trim()<br /></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (@item.Languge == (int)MyCms.Utilities.Enum.CommonEnum.LangugeEnum.Per)
                {
                    if (HeaderWrite)
                    {
                        <div class="row">
                            <div class="col-md-12 wow bounce">
                                <h2 class=" Persianfont PersianTextAlignC">افتخارات</h2>
                            </div>
                        </div>
                    }
                    <div class="col-md-6 col-xs-11 wow fadeInUp " data-wow-delay="0.6s">
                        <div class="media">

                            <div class="media-body">
                                <h3 class="media-heading Persianfont PersianTextAlignR" style="color:#D43F52">@item.RankName </h3>
                                <p class=" Persianfont PersianTextAlignR">
                                    @if (@item.Institute != null)
                                    {

                                        <h>موسسه  :  </h>@item.Institute;
                                        <br /> @item.RankDesc.Trim()
                                    }
                                </p>

                            </div>
                            <div class="media-object media-left ">
                                <i class="fa fa-gift"></i>
                            </div>
                        </div>
                    </div>
                }
                HeaderWrite = false;

            }
        </div>
    </div>

